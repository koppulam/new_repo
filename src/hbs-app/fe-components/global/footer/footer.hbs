    {{/if}}
    {{#if china-text3.show}}
    <div class="footer-policies-data">
        <a href="{{china-text3.ctaLink}}" {{#if china-text3.newTab}}target="_blank"{{/if}} aria-label="{{china-text3.text}}">
            <span class="bottom-image">
                <img src="{{china-text3.icon}}" alt="{{china-text3.alttext}}" />

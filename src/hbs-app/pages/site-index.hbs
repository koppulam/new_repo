    {{/each}}

    <div class="site-index site-index__container">
        <div class="site-index__container-content container50x50">
            <div class="site-index__container-content-section">
                <div class="site-index site-index__container">
                    {{> site-index-content
                        site-index.twoColumn
                    }}
                </div>
            </div>
            <div class="site-index__container-content-section">
                <div class="site-index site-index__container">
                    {{> site-index-content
                        site-index.twoColumn
                    }}
                </div>
            </div>
        </div>
    </div>

</div>

<div class="wrapper">
    <div class="site-index site-index__header">
        <h1>{{site-index.siteIndex.heading}}</h1>
    </div>
    {{#each site-index.siteIndex.items}}
        <div class="site-index site-index__container">
            <h4 class="site-index__container-header">{{subheading}}</h4>
        </div>
